<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Capsule.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/Theme.Capsule.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <TimePicker
        android:id="@+id/timePick1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="150dp"
        android:theme="@style/time_pick_style"
        android:amPmTextColor="@color/colorAccent"
        android:fontFamily="serif"
        android:headerAmPmTextAppearance="@color/colorAccent"
        android:headerBackground="@color/colorPrimaryDark"
        android:headerTimeTextAppearance="@style/TextAppearance.AppCompat.Large"
        android:numbersBackgroundColor="@color/colorPrimary"
        android:numbersInnerTextColor="@color/colorAccent"
        android:numbersTextColor="@color/colorAccent"
        android:scrollbarSize="14dp"
        android:timePickerMode="spinner"
        android:touchscreenBlocksFocus="false" />





    <TextView
        android:text="  Application Time Management"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:layout_marginTop="500dp"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        android:id="@+id/textView2" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="800px"
        android:layout_marginTop="500dp"
        android:background="@drawable/switch_"
        android:textOff="OFF"
        android:textOn="ON" />

    <TextView
        android:text="  Set Restriction"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:layout_marginTop="555dp"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        android:id="@+id/textView3" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="58dp"
        android:layout_height="24dp"
        android:layout_marginLeft="800px"
        android:layout_marginTop="565dp"
        android:background="@null"
        android:contentDescription="Works like fun"
        android:src="@drawable/button" />

    <Button
        android:text=" Apps Statistics"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:layout_marginTop="610dp"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/btn_Stats" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>